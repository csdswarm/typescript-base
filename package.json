{
  "name": "typescript-base",
  "version": "1.0.0",
  "description": "A barebones typescript skeleton for a new typescript project",
  "main": "index.js",
  "scripts": {
    "clean": "node build/clean.js",
    "lint": "tslint -c tslint.json \"src/**/*.ts\"",
    "lint:fix": "tslint --fix -c tslint.json \"src/**/*.ts\"",
    "build": "npm run lint && npm run test && npm run clean && rollup --config",
    "dev": "npm run lint:fix && npm run test:watch && npm run clean && rollup --config",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.schema.ts",
      "!src/schema/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts",
      "<rootDir>/tests/**/?(*.)test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    }
  },
  "keywords": [
    "plugin",
    "data",
    "coupling",
    "share",
    "asynchronous",
    "framework"
  ],
  "author": "Christopher Strolia-Davis <the-javascriptor@unite-the.world>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "rollup": "^1.16.4",
    "rollup-plugin-typescript2": "^0.21.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.2"
  }
}
